{
  "name": "@stayradiated/error-boundary",
  "version": "1.13.0",
  "description": "Catch and return errors as values",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepublish": "pnpm run build",
    "tidy": "xo --fix",
    "build": "del-cli dist && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup",
    "test": "ava"
  },
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "dependencies": {
    "@northscaler/better-error": "0.1.0-dev.10"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "ava": "4.0.1",
    "del-cli": "4.0.1",
    "eslint-plugin-fp": "2.3.0",
    "typescript": "4.6.2",
    "xo": "0.48.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended"
    ],
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off",
      "fp/no-unused-expression": "off",
      "fp/no-nil": "off",
      "fp/no-loops": "off",
      "fp/no-mutation": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
